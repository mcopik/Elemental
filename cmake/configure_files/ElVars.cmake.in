# To help simplify including Elemental in external projects
# Version developed to include directly into a CMake script

set(EL_INC @CMAKE_INSTALL_PREFIX@/include)
set(EL_LIB @CMAKE_INSTALL_PREFIX@/lib)

set(CC @CMAKE_C_COMPILER@)
set(CXX @CMAKE_CXX_COMPILER@)

set(EL_LINK_FLAGS -L${EL_LIB} @EL_LINK_FLAGS@)

set(ALL_MATH_INC -I${EL_INC})
set(ALL_MATH_LIBS -lEl -lpmrrr -lElSuiteSparse @CMAKE_THREAD_LIBS_INIT@ @MATH_LIBSTRING@ @EXTERNAL_LIBSTRING@)
set(ALL_MPI_FLAGS @MPI_CXX_INCSTRING@ @MPI_CXX_COMPILE_FLAGS@)

if(@EL_HAVE_QT5@)
   set(EL_COMPILE_FLAGS = @CXX_FLAGS@ ${ALL_MATH_INC} ${ALL_MPI_FLAGS} @QT5_COMPILESTRING@ @QT5_INCSTRING@ @QT5_DEFSTRING@)
   set(EL_LIBS ${ALL_MATH_LIBS} @MPI_CXX_LIBSTRING@ @QT5_LIBSTRING@)
else(@EL_HAVE_QT5@)
   set(EL_COMPILE_FLAGS @CXX_FLAGS@ ${ALL_MATH_INC} ${ALL_MPI_FLAGS})
   set(EL_LIBS ${ALL_MATH_LIBS} @MPI_CXX_LIBSTRING@)
endif(@EL_HAVE_QT5@)
